<%= form_for(@notice, :url => manage_update_path ) do |f| %>

<%= f.hidden_field :user_id, :value => @user_id %>
<br>
<%= fields_for :salon do |af| %>
<span>許可、不許可の選択</span>
<%= af.select :approval, [["許可", true], ["不許可", false]] %>
<%= af.hidden_field :id, :value => @salon.id %>
<% end %>

<p>許可（不許可）の理由　（サロン設立者に通知されます）</p>


<%= f.label :タイトル %><br />
<%= f.text_area :title %>


<div class="field">
  <%= f.label :description %>
  <%= f.text_area :description %>
</div>

<div class="actions">
  <%= f.submit %>
</div>
<% end %>

<script>
 $(function() {
   $('#notice_description').froalaEditor();
 });
</script>