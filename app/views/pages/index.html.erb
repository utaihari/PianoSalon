<h1>ピアノサロン・ローズ</h1>
<ul>
	<li><%= link_to "部屋の予約はこちら", schedules_path %></li>
	<% if !@areas.blank? %>
	<% for area in @areas %>
	<li><%= link_to area.area_name, area_path(area.id) %></li>
	<% end %>
	<% else %>

	<% end %>
	<% if user_signed_in? && current_user.admin %>
	<li><%= link_to "ホール一覧", areas_path %></li>
	<li><%= link_to "サロン一覧", salons_path %></li>
	<% end %>
	<div>
		<h4>近日中のサロン開催予定</h4>
		<% if !@next_schedules.blank? %>
		<table class="table">
			<thead>
				<tr>
					<th>サロン</th>
					<th>開催日時</th>
					<th>講師</th>
				</tr>
			</thead>

			<tbody>
				<% @next_schedules.each do |schedule| %>
				<tr>
					<td><%= link_to schedule.title, schedule_path(schedule.schedule_id) %></td>
					<td><%= schedule.start_time %></td>
					<td><%= schedule.user_name %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
		<% else %>
		<p>近日中の開催予定はありません</p>
		<% end %>
	</div>
</ul>