<p id="notice"><%= notice %></p>

<h1>ホール一覧</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>住所</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @areas.each do |area| %>
    <tr>
      <td><%= link_to area.area_name, area %></td>
      <td><%= area.address %></td>
      <% if current_user.admin %>
      <td><%= link_to 'Edit', edit_area_path(area) %></td>
      <td><%= link_to 'Destroy', area, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

